<% title "新闻中心" %>
<% meta_keywords "欧美龙洗衣新闻中心" %>
<% meta_description "欧美龙洗衣新闻中心"%>
<% nav_bar [['首页', '/'],['新闻中心', '/news_items']] %>
<% side_news "新闻" %>
<% side_nav "新闻", 'news' %>

<div class="news_list">
    <ul>
    <% @news_items.each do |news_item| %>
      <li>
      <span class="news_title"><%= link_to news_item.title, news_item_path(news_item), :class=> 'news_title' %></span>
      &nbsp;&nbsp;&nbsp;&nbsp;[新闻类型：<%= news_item.news_cate.name %>] [更新时间：<%= news_item.updated_at.to_s(:db) unless news_item.updated_at.blank?%>]
      <div class="news_content">
        <%= strip_tags(news_item.body.gsub(/&nbsp;/, '')).truncate(120) %>
      </div>
      </li>
    <% end %>
    </ul>
</div>
<br />

<%= will_paginate %>
