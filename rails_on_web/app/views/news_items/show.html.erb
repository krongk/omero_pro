<% title @news_item.title %>
<% meta_keywords @news_item.title %>
<% nav_bar [['首页', '/'],['新闻中心', '/news_items'],[@news_item.news_cate.name, '/news_cates/'+ @news_item.news_cate.id.to_s]] %>
<% side_news @news_item.news_cate.name %>
<% side_nav @news_item.news_cate.name, 'news' %>

<div id="news_item" class="corner_box">
	<h1>
	  <%= @news_item.title %>
	</h1>
	<hr class="black"/>

	<div id="news_content">
	  <% unless @news_item.image_path.blank? %><div class="news_img"><%= image_tag @news_item.image_path %></div><% end %>
	  <%= simple_format @news_item.body unless @news_item.body.blank? %>
	</div>

	<hr/>
	<%= link_to '返回', news_items_path %>
</div>