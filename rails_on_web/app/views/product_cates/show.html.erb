<% title @product_cate.name %>
<% meta_keywords "欧美龙洗衣产品中心" %>
<% meta_description "欧美龙洗衣产品中心"%>
<% nav_bar [['首页', '/'],['产品中心', '/product_cates'], [@product_cate.name, '/product_cates/'+ @product_cate.id.to_s]] %>
<% side_news "产品中心" %>
<% side_nav @product_cate.name, 'product'%>

<% recent_product_items = ProductCate.recent(24, cate = @product_cate.id) %>
<table width="98%" border="0" cellspacing="0" cellpadding="0" background-color = "#fff">
 <tr>
   <td width="<%= is_ie? ? '180' : '350'%>" align="left" valign="top">
<div class="product_list">
    <h3>+ 洗涤产品列表</h3>
    <ul>
    <% recent_product_items.each_with_index do |item, index|%>
      <% break if index > 19 %>
      <li class="item_li">
        <%= link_to image_tag((item.image_path || asset_path("product.jpg")), :class => 'item_img'), product_item_path(item.id)%>
        
      </li>
    <% end %>
    </ul>
    <br/><br/>
</div>    
