   <td align="left" valign="top">

<div id="product_main_show">
  <%=image_tag asset_path("show_06.jpg"), :width =>'463px' %>
  <div class="content">
  <h1>产品中心</h1>
  <hr class="black"/>
  <% (0..1).each_with_index do |index| %>
    <div class="item">
      <div class="main_product_image" style="width:400px; height: 220px;">
        <%= link_to image_tag((recent_product_items[index].image_path || asset_path("product.jpg")), :width => "400px"), product_item_path(recent_product_items[index]) %></div>
      <h4><span class="toto"></span><%= link_to recent_product_items[index].title, product_item_path(recent_product_items[index]) %></h4>
      <div clas="description">
        <%=strip_tags(recent_product_items[index].description.to_s.truncate(120))%>
        <%=link_to "查看详情>>", product_item_path(recent_product_items[index]) %>
      </div>
    </div>
  <% end %>

  <table width="96%">
  <tr><td width="50%" align="left" valign="top">
    <div class="main_product_image"  style="width:200px; height: 120px; margin-right: 10px;">
      <%=link_to image_tag((recent_product_items[2].image_path || asset_path("product.jpg")), :width => "200px"), product_item_path(recent_product_items[2]) %>
    </div>
  </td><td align="left" valign="top">
    <div class="main_product_image" style="width:200px; height: 120px;">
      <%=link_to image_tag((recent_product_items[3].image_path || asset_path("product.jpg")), :width => "200px"), product_item_path(recent_product_items[3]) %>
    </div>
  </td></tr>
  <tr><td>
     <h4><span class="toto"></span><%=link_to recent_product_items[2].title, product_item_path(recent_product_items[2])%></h4>
    </td><td>
     <h4><span class="toto"></span><%=link_to recent_product_items[3].title, product_item_path(recent_product_items[3])%></h4>
  </td></tr>
  <tr><td>
      <%= strip_tags(recent_product_items[2].description.to_s.gsub(/&nbsp;/, '')).truncate(120) %>
      <%=link_to "查看详情>>", product_item_path(recent_product_items[2]) %>
    </td><td>
      <%= strip_tags(recent_product_items[3].description.to_s.gsub(/&nbsp;/, '')).truncate(120) %>
      <%=link_to "查看详情>>", product_item_path(recent_product_items[3]) %>
  </td></tr>

  </table>

</div>
