<h1>Listing orders</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Order time</th>
    <th>Order count</th>
    <th>Message</th>
    <th>Is verfied</th>
    <th>Verfied by</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.customer %></td>
    <td><%= order.phone %></td>
    <td><%= order.address %></td>
    <td><%= order.order_time %></td>
    <td><%= order.order_count %></td>
    <td><%= order.message %></td>
    <td><%= order.is_verfied %></td>
    <td><%= order.verfied_by %></td>
    <td><%= order.note %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

