        <img alt="欧美龙国际洗衣连锁" src="<%=asset_path("slider/2.jpg")%>" />
        <img alt="欧美龙国际洗衣连锁" src="<%=asset_path("slider/3.jpg")%>" />
        <img alt="欧美龙国际洗衣连锁" src="<%=asset_path("slider/4.jpg")%>" />
        <img alt="欧美龙国际洗衣连锁" src="<%=asset_path("slider/5.jpg")%>" />
      </div>
      
      <div class='slideshow-controls'>
        <a href="#1" class="slideshow-slide"><%=image_tag asset_path("slider/1.jpg"), :width => "60px" %></a>
        <a href="#2" class="slideshow-slide"><%=image_tag asset_path("slider/2.jpg"), :width => "60px" %></a>
