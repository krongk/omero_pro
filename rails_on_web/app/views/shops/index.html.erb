<% title "门店查询" %>

<% content_for :menu_side do %>
  <%=image_tag asset_path("menu_side_search.jpg") %>
  <% Region.all.sort{|r1,r2| r1.name.length <=> r2.name.length}.each do |region| %>
    <span style="padding:6px; margin:4px; font-size: 14px;">
      <%= link_to region.name, :controller => :shops, :action => :index, 'shop[region_id]' => region.id %>
    </span>
  <% end %>
<% end %>



<br/>
<div id="search_shop">
<ul>
<%= form_tag("/shops/", :method => "get") do %>
  <%=render :partial => "/shops/dropdown_region_city_district" %>
  <li>
    <%= image_submit_tag("btn_submit.jpg", :class => 'search_button') %>
  </li>
<% end %>
</ul>
</div>
<%# @location[:region].values.flatten[0] %>
<%=link_to "   点此直接进入#{@location[:country]},#{@location[:region].keys[0]} #{@location[:city].keys[0]}的分店", :controller => :shops, :action => :index, 
"shop[region_id]" =>@location[:region].values.flatten[0] , 
"shop[city_id]" =>@location[:city].values.flatten[0]
 %>

<% if @shops.size > 0 %>
  <iframe src="/home/location?shop_ids=[<%=@shops.map(&:id).join(',')%>]" width="100%" height="500px" scrolling="no"></iframe>
<% else %>
  <iframe src="/home/location" width="100%" height="500px" scrolling="no"></iframe>
<% end %> 

<!--查询结果-->
<% if @shops.size > 0 %>
	<h3>查询结果</h3>
	<ul>
	<% @shops.each do |shop| %>
	  <li><%=link_to shop.short_address, shop_path(shop.id) %></li>
	<% end %>
	</ul>
<% end %>

<%=image_tag asset_path("map.jpg"), :width=> "100%" %>