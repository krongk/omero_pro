 .sub_kwicks{
    float: left;
	padding: 0px;
	margin: 0px;
	width: 100%;
	list-style-type: none;
	overflow: hidden;
}

.sub_kwicks li {
	display: none;
	width: 100%;
	border: 0px solid #f52969;
	height: 30px;
	margin: 5px 0 0 0;
	padding: 0px;
}
.sub_kwicks li a {
	font-family: "微软雅黑";
	font-size: 14px;
	color: #ffffff;
	text-decoration: none;
	padding: 4px 8px;
}
.sub_kwicks li a:hover {
	color: #f52969;
}
.sub_kwicks li a:visited {
	color: #ffffff;
}
