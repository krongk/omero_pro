.sub_kwicks{
	display: block;
	position: relative;
	visibility: visible;
	width: 100%;
	margin-top: 80px;
	list-style-type: none;
	background-color: #fff;
	float: left;
	padding: 8px;
	height: 35px;
}

.sub_kwicks li {
	display: none;
	width: 100%;
	border: 1px solid #f52969;
	background-color: #f52969;
	height: 30px;
	margin: 0px;
	padding-top: 10px;
	padding-right: 0px;
	padding-bottom: 0px;
	padding-left: 0px;
}
.sub_kwicks li a {
	font-family: "微软雅黑";
	font-size: 16px;
	color: #ffffff;
	text-decoration: none;
	padding: 4px;
	margin-top: 10px;
	margin-right: 10px;
	margin-bottom: 10px;
	margin-left: 10px;
}
.sub_kwicks li a:hover {
	color: #b8b8b8;
}
