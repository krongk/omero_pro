/*******news*******************************************************************/
.news_content{
	font-size: 14px;
}
/*******side bar*******************************************************************/
#side_table {
  border-left-width: 1px;
  border-left-style: dotted;
  border-left-color: #b7b7b7;
}
#side_table td {
	line-height: 30px;
	border-bottom-width: 2px;
	border-bottom-style: dotted;
	border-bottom-color: #c7c7c7;
}
.box{
	width: 240px;
	padding: 6px;
	margin-bottom: 10px;
	background-color: #fff;
}
.sidebar1_body a{
	color: #fff;
}
.cord {
	padding: 6px;
	background-image: url(<%= asset_path("li_sq.gif")%>);
	background-repeat: no-repeat;
	background-position: center center;
}
.red_bg{
    padding: 0 4px;
    margin-right: 6px;
	background-color: #f52969;
	color: #ffffff;
}
.black_bg{
	background-color: #888;
	color: #ffffff;
}
h3.title{
	margin: 0;
	padding: 0;
	font-weight: normal;
}
#slideshow {
  width: 240px;
  height: 120px;
}
#slideshow img {
  display: block;
  width: 240px;
  height: 120px;
}
#slideshow2 {
  width: 240px;
  height: 85px;
}
#slideshow2 a{
	margin: 0;
	padding: 0;
}

/*-------------------------footer site_map start--------------------*/
#site_map {
	border: 0px solid #eee;
}
#site_map hr{
	color: #ccc;
}
.no_border{
	border: 0px;
}
#site_map td {
	border: 1px solid #CCC;
	border-right: 0px;
}
#site_map td.right {
	border-right: 1px solid #CCC;
}
#site_map table td {
	border: 0px solid #eee;
}
#site_map p {
	margin: 6px;
	padding: 0px;
}
#site_map h3  {
    margin: 6px 0px 0px 20px;
}
#site_map h3 a {
    font-size: 18px;
	color: #ccc;
}
#site_map p a {
	color: #eee;
}
/*******header nav start*******************************************************************/
#sub_menu {
    margin-top: 4px;
    padding: 4px;
	height: 35px;
	text-align: left;
	vertical-align: middle;
	background-color: #888;
	overflow: hidden
}
.kwicks {
	list-style: none;
	position: relative;
	margin: 0;
	padding: 0;
	width:100%;
	z-index:2;
}
.kwicks li {
	float: left;
	overflow: hidden;
	padding: 0;
	cursor: pointer;
	z-index:2;
	border-left-width: 1px;
	border-left-style: solid;
	border-left-color: #888;
}
.kwicks li a {
	font-size: 18px;
	letter-spacing: 0.0em;
	color: #000;
	height: 40px;
	outline:none;
	display:block;
	z-index:100;
	cursor:pointer;
	text-decoration: none;
	margin-left: 6px;
}
.kwicks li a h3 {
	font-family: "couries new";
	font-size: 12px;
	font-weight: normal;
	color: #ccc;
}
#kwick_1, #kwick_2, #kwick_3, #kwick_4, #kwick_5, #kwick_6, #kwick_7 {
	margin: 0pt;
	overflow: hidden;
	position: absolute;
	display: block;
	width: 110px;
}
#kwick_1 {
	left: 0px;
	border: none;
}
#kwick_2 {
	left: 112px;
}
#kwick_3 {
	left: 224px;
}
#kwick_4 {
	left: 336px;
}
#kwick_5 {
	left: 440px;
}
#kwick_6 {
	left: 550px;
}
#kwick_7 {
	right: 0px;
}
.kwicks a:hover, .kwicks #active {
	color: #f52969;
	background-color: #888888;
}
.kwicks li a:hover h3, .kwicks li #active h3 {
	color: #f52969;
	background-color: #888888;
}
#kwick_1 a {
	background-position:-1000px 0px;
}
#kwick_2 a {
	background-position:-1000px -50px;
}
#kwick_3 a {
	background-position:-1000px -192px;
}
#kwick_4 a {
	background-position:-1000px -100px;
}
#kwick_5 a {
	background-position:-1000px -150px;
}
#kwick_6 a {
	background-position:-1000px -150px;
}
#kwick_7 a {
	background-position:0px -300px;
}
