.section{
	color: 888888;
	letter-spacing: 0.1em;
	font-size: 110%;
	line-height: 30px;
}
.section {
	margin: 0px;
	padding: 0px;
}
.section h3 {
	color: 888888;
	font-family: "微软雅黑";
	letter-spacing: 0.2em;
}
.section .summary {
	margin: 10px;
	padding: 10px;
}
.section ul, ol {
   margin: 20px 0 20px 40px;
   padding: 20px;
   background-color: #eee;
}

.section ul li {
    line-height: 35px;
	list-style-type: square;
	list-style-image: url(<%=asset_path("li_sq.gif")%>);
}
.section .question {
	margin: 10px;
	color: #f52969;
	font-size: 120%;
}
.section .answer {
	padding-left: 40px;
}