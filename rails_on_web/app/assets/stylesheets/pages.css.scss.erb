*{
	margin: 0; 
	padding: 0;
}
body {
	margin: 0; 
	padding: 0;
	text-align: center; /* this centers the container in IE 5* browsers. The text is then set to the left aligned default in the #container selector */
	color: #333;
	font-family: "Microsoft YaHei", "Arial Unicode MS", "微软雅黑";
	font-size: 12px;
	background-color: #fff;
}
form{
	margin: 0; 
	padding: 0;
}
input{
	margin: 0;
	padding: 2px !important;
	padding: 2px;
}
div, p, span{
	margin: 0; 
	padding: 0;
}
ul, ol, dl { 
	margin: 0; 
	padding: 0;
}
li {
	list-style-type: none;
}

h1, h2, h3, h4, h5, h6, p {
	margin: 0; 
	padding: 10px;
}
a img {
	border: none;
}

a:link {
	color: #333;
	text-decoration: none; 
}
a:visited {
    color: #000;
	text-decoration: none;
}
a:hover, a:active, a:focus {
	color: #cc0000;
	text-decoration: underline;
}
.write a{color: #ffffff;}
.write a:visited {color: #ffffff;}
.write a:hover, a:active, a:focus{color: #333;}
.right_border {
	border-right-width: 1px;
	border-right-style: dashed;
	border-right-color: #999;
}
.red_border {
	background-color: #cc0000;
	margin: 0px;
	padding: 0px;
	height: 2px;
	width: 100%;
}

.omero #container {
	width: 980px;
	text-align: left; /* this overrides the text-align: center on the body element. */
	/*background-color: #e6ebef;*/
	margin: 0 auto;
	border-right: solid 1px #dddddd;
	border-left: solid 1px #dddddd;	
}
.omero #header_banner {
	margin: 0;
	padding: 0;
	background-color: #494949;
}
.omero #header_logo {
	margin: 0;
	padding: 0;
	height: 160px !important;
	height: 230px;
	background-color: #494949;
}
#header_logo .content {
	margin: 70px 0 0 0; 
	padding: 0;
	text-align: center;
}
#header_logo .form_logo {
	float: right;
	width: 270px;
	position: relative;
	text-align: right;
	height: 90px;
	z-index: 12;
	overflow: hidden;
	clear: both;
	top: -90px;
	margin-right: 8px;
}
.login_reg a {
	background-color: #ddd;
	margin: 0 0 0 3px;
	padding: 3px 10px 2px 10px;
}
.login_reg a:hover {
	color: #cc0000;
	background-color: #333;
	margin: 0 0 0 3px;
	padding: 3px 10px 2px 10px;
}
.omero #header_nav {
	padding: 0;
	margin: 0px;
	height: 48px;
	background-color: #FF9;
}
#banner {
	height: 690px;
}
.omero #mainContent {
	margin: 0px;
	padding-top: 0px;
	padding-right: 10px;
	padding-bottom: 0;
	padding-left: 10px;
}
/******side bar*******/
#sidebar {
	text-align: left;
	margin: 0;
	padding: 0 0 0 4px;
}
.corner_white{
	margin: 0px;
	padding: 0px;
}
.corner_white .bg_white{
	background-image: url(<%=asset_path("3_09.jpg")%>);
	background-repeat: repeat-y;
	margin: 0;
	padding: 0 0 0 12px;
}
.news_list {
	margin: 0px;
	padding: 10px;
	background-image: url(<%=asset_path("1_04.jpg")%>);
	background-repeat: repeat-x;
}
/******side bar*******/

.omero #footer {
	padding: 0 10px; /* this padding matches the left alignment of the elements in the divs that appear above it. */

}
.omero #footer p {
	margin: 0; /* zeroing the margins of the first element in the footer will avoid the possibility of margin collapse - a space between divs */
	padding: 10px 0; /* padding on this element will create space, just as the the margin would have, without the margin collapse issue */
}