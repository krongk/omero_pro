	padding-right: 6px;
	padding-bottom: 6px;
	padding-left: 0px;
} 

#page .section {
	float: left;
	width: 300px;
	padding: 10px;
	margin: 0px;
	border-right-width: 2px;
	border-right-style: dotted;
	border-right-color: #666;
}
#page .section h3 {
	color: 888888;
	font-family: "微软雅黑";
	letter-spacing: 0.2em;
	padding: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-bottom: 10px;
	margin-left: 0px;
}
#page .section .summary {
	padding: 10px;
	font-size: 14px;
}
#page .section ul, ol {
	margin: 0;
	padding: 0px;
}

#page .section ul li {
	list-style-type: square;
	list-style-position: inside;
	border-bottom-width: 2px;
	border-bottom-style: dotted;
	border-bottom-color: #999;
	font-size: 12px;
	line-height: 25px;
	margin: 0px;
	padding: 0px;
}
#page .section .question {
	margin: 10px;
	color: #f52969;
	font-size: 120%;
}
#page .section .answer {
	padding-left: 40px;
}