@charset "utf-8";
*{
	margin: 0; 
	padding: 0;
}
body {
	font: 12px "微软雅黑", "Microsoft YaHei";
	font-family: "微软雅黑", "Microsoft YaHei";
	margin: 0;
	padding: 0;
	text-align: center; 
	color: #333;
	background-color: #fff;
	line-height: 20px;
}

form{
	margin: 0; 
	padding: 0;
}
input{
	margin: 0;
	padding: 2px !important;
	padding: 2px;
}
div, p, span{
	margin: 0; 
	padding: 0;
}
ul, ol, dl { 
	margin: 0; 
	padding: 0;
}
li {
	list-style-type: none;
	line-height: 24px;
}

h1, h2, h3, h4, h5, h6, p {
	margin: 0; 
	padding: 10px;
	font-weight: 400;
}

a img {
	border: none;
}

a:link {
	color: #333;
	text-decoration: none; 
}
a:visited {
    color: #000;
	text-decoration: none;
}
a:hover, a:active, a:focus {
	color: #cc0000;
	text-decoration: underline;
}
.write a{color: #ffffff;}
.write a:visited {color: #ffffff;}
.write a:hover, a:active, a:focus{color: #333;}
.right_border {
	border-right-width: 1px;
	border-right-style: dashed;
	border-right-color: #999;
}
.red_border {
	background-color: #cc0000;
	margin: 0px;
	padding: 0px;
	height: 2px;
	width: 100%;
}
.red{color: #f52969;}
.font18{font-size: 18px;}
.border_left{
	border-left-width: 2px;
	border-left-style: dotted;
	border-left-color: #999;	
}
.border_black_1_img {
    padding: 0;
    margin: 0 10px;
    background-image: url("<%=asset_path "border_black_1.jpg" %>");
    background-repeat: repeat-x;
    background-position: top top;
}
.border_black_2_img {
    padding: 0;
    margin: 0 10px;
	background-image: url("<%=asset_path "border_black_2.jpg" %>");
    background-repeat: repeat-x;
    background-position: top top;
}
.border_black_1 {
    padding: 0;
    margin: 0 10px;
	border-bottom: solid 1px #333;
}
.border_black_2 {
    padding: 0;
    margin: 0 10px;
	border-bottom: solid 2px #333;
}
.more_black_border {
	height: 25px;
	width: 100%;
	text-align: right;
	display: block;
	color: #666;
	font-size: 14px;
	border-bottom-width: 3px;
	border-bottom-style: solid;
	border-bottom-color: #666;
}
.more_red {
    margin: -10px 0 0 0;
	padding: 0;
	border-bottom: solid 2px #cc0000;
	color: #C00;
	width: 100%;
	text-align: right;
}
.font_gray a{color: #ccc;}
.more_black {
	height: 25px;
	width: 100%;
	text-align: right;
	display: block;
	color: #666;
}

.white_a {
	background-image: url("<%=asset_path "white_a.gif" %>");
	padding: 2px;
	background-repeat: no-repeat;
}

h2 {
	font-size: 14px;
	margin: 4px;
}

h2 a{
	font-size: 14px;
	margin: 0px;
}
.toto {
	padding: 2px 6px 2px 12px;
	margin: 0 4px 0 0;
	background-image: url("<%=asset_path "ico1.gif" %>");
	background-repeat: no-repeat;
	background-position: center center;
}
h3.title{
    margin: 10px 0 0 0;
    padding: 4px;
	background-color: #494949;
	color: #ffffff;
}
.bshare {
	float: right;
	margin: 0px;
	margin-top: -45px;
	padding: 0px;
}

.black{
	border: 1px dotted #646464;
	padding: 0px;
	margin: 0px;
}
