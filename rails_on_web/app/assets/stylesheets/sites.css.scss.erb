}
#site_map p {
	margin: 6px;
	padding: 0px;
}
#site_map a {
    font-size: 12px;
	color: #CCC;
	text-decoration: none;
}
#site_map h3  {
    margin: 6px 0px 0px 20px;
}
#site_map h3 a {
    font-size: 16px;
}
#site_map p a {
	color: #FFF;
	text-decoration: none;
	font-family: "微软雅黑";
}
/*page show***********************/
#page .section{
	color: 888888;
	letter-spacing: 0.1em;
	font-size: 110%;
	line-height: 30px;
}
#page .section {
	margin: 0px;
	padding: 0px;
}
#page .section h3 {
	color: 888888;
	font-family: "微软雅黑";
	letter-spacing: 0.2em;
}
#page .section .summary {
	margin: 10px;
	padding: 10px;
}
#page .section ul, ol {
   margin: 20px 0 20px 40px;
   padding: 20px;
   background-color: #eee;
}

#page .section ul li {
    line-height: 35px;
	list-style-type: square;
	list-style-image: url(<%=asset_path("li_sq.gif")%>);
}
#page .section .question {
	margin: 10px;
	color: #f52969;
	font-size: 120%;
}
#page .section .answer {
	padding-left: 40px;
}
/*page show*********************************************************************/
/*-------------------------KWICKS--------------------*/
#top_menu tr td a{font-size: 18px; font-weight: 500;}
#top_menu tr td {
	border-right-width: 2px;
	border-right-style: solid;
	border-right-color: #888;
	height: 35px;
	text-align: center;
}
#sub_menu {
    margin-top: 4px;
    padding: 4px;
	height: 35px;
	text-align: left;
	vertical-align: middle;
	background-color: #888;
	overflow: hidden
}
.kwicks {
	list-style: none;
	position: relative;
	margin: 0;
	padding: 0;
	width:100%;
	height:50px;
	z-index:2;
}
.kwicks li {
	display: block;
	float: left;
	overflow: hidden;
	padding: 0;
	cursor: pointer;
	z-index:2;
	border-left-width: 1px;
	border-left-style: solid;
	border-left-color: #666;
}
.kwicks li a {
	background-image:url(<%= asset_path("sprites_menu.jpg") %>);
	background-repeat:no-repeat;
	font-family: "微软雅黑", Arial;
	font-size: 16px;
	letter-spacing: 0.0em;
	color: #000000;
	height: 40px;
	outline:none;
	display:block;
	z-index:100;
	cursor:pointer;
	font-weight: bold;
	margin-left: 5px;
	text-decoration: none;
}
.kwicks li h3 {
	position: absolute;
	width: 120px;
	font-family: "couries new";
	font-size: 10px;
	color: #999999;
	outline:none;
	z-index:0;
	cursor:pointer;
	font-weight: normal;
	margin-left: 5px;
	text-decoration: none;
	left: 0px;
	top: 18px;
	right: 0px;
	bottom: 0px;
}
#kwick_1, #kwick_2, #kwick_3, #kwick_4, #kwick_5, #kwick_6, #kwick_7 {
	margin: 0pt;
	overflow: hidden;
	position: absolute;
	display: block;
	width: 110px;
}
#kwick_1 {
	left: 0px;
	border: none;
}
#kwick_2 {
	left: 112px;
}
#kwick_3 {
	left: 224px;
}
#kwick_4 {
	left: 336px;
}
#kwick_5 {
	left: 440px;
}
#kwick_6 {
	left: 550px;
}
#kwick_7 {
	right: 0px;
}
.kwicks a:hover, .kwicks #active {
	color: #f52969;
}
.kwicks li a:hover h3, .kwicks li #active h3 {
	color: #f52969;
}
#kwick_1 a {
	background-position:0px 0px;
}
#kwick_2 a {
	background-position:0px -50px;
}
#kwick_3 a {
	background-position:0px -192px;
}
#kwick_4 a {
	background-position:0px -100px;
}
#kwick_5 a {
	background-position:0px -150px;
}
#kwick_6 a {
	background-position:-1000px -150px;
}
#kwick_7 a {
	background-position:0px -300px;
}
