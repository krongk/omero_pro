#store_title{
    color: #cc0000;
    float: left;
    position: relative;
    width: 100%;
    z-index: 10;
    background-color: #fff;
    margin: -65px 0 20px 0;
    padding: 0;
    border-bottom: dotted 2px #333;
}
#store_title h2{
    margin: 0;
    padding: 6px 0;
    font-size: 20px;
    font-weight: 600;
}
#store_title h1{
    margin: 0;
    padding: 0;
    font-size: 36px;
    font-weight: 700;
    line-height: 1;
}
#store_title p{
    margin: 0;
    padding: 6px 0;
    font-size: 16px;
    font-weight: 600;
}