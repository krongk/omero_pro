.news_list li{
	line-height: 35px;
}
.news_list h2 a{
	background-image: url("<%=asset_path('li_sq_black.gif')%>");
	background-repeat: no-repeat;
	background-position: left center;
	margin: 0px;
	padding-top: 0px;
	padding-right: 0px;
	padding-bottom: 0px;
	padding-left: 30px;
	font-size: 24px;	
}
#news_item{
	margin: 20px 20px 0 0;
	padding: 20px;
}
#news_item h1{
	font-size: 30px;
	margin:0;
	padding: 0;
}
.news_title{
	margin: 0;
	padding: 0;
	font-size: 14px;
	color: #cc0000;
}
.news_content{
	margin: 0;
	padding: 0;
}